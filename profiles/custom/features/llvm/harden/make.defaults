_LLVM_HARDEN_COMPILE_FLAGS="-fPIC -fstack-protector-strong -D_FORTIFY_SOURCE=2"
CFLAGS="${CFLAGS} ${_LLVM_HARDEN_COMPILE_FLAGS}"
